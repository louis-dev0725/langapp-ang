{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "src/*.tns.ts",
        "src/*.ts"
      ],
      "@app/*": [
        "src/app/*.tns.ts",
        "src/app/*.ts"
      ]
    }
  },
  "files": [
    "src/main.tns.ts"
  ]
}
