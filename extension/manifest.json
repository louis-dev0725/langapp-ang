{
  "manifest_version": 2,
  "name": "LangApp Extension",
  "version": "1.0.0",
  "description": "Запускатор расширения LangApp",
  "icons": {
    "128": "assets/images/icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://localhost:8090/api/*"
  ],
  "browser_action": {
    "default_title": "LangApp",
    "default_icon": "assets/images/icon.png",
    "default_popup": "index.html?#/popup"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "contentPage.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "backgroundPage.js",
      "runtime.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}