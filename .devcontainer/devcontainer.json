{
  "name": "Ubuntu",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-20.04",
  "features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "16"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:1": {
      "version": "latest"
    }
  },
  "overrideFeatureInstallOrder": [
    "ghcr.io/devcontainers/features/node",
    "ghcr.io/devcontainers/features/sshd",
    "ghcr.io/devcontainers/features/git-lfs",
    "ghcr.io/devcontainers/features/github-cli",
    "ghcr.io/devcontainers/features/docker-in-docker",
    "ghcr.io/devcontainers/features/kubectl-helm-minikube"
  ],
  "remoteUser": "vscode",
  "containerUser": "vscode",

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  "onCreateCommand": "sudo apt-get update; sudo apt-get install -y php7.4; curl -fsSL https://raw.githubusercontent.com/tilt-dev/tilt/master/scripts/install.sh | bash",
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "echo \"$DOTENV_CONTENT\" > .env",
  "customizations": {
    "vscode": {
      "extensions": [
        "42Crunch.vscode-openapi",
        "ahmadalli.vscode-nginx-conf",
        "Angular.ng-template",
        "bmewburn.vscode-intelephense-client",
        "bradlc.vscode-tailwindcss",
        "chrisbibby.hide-node-modules",
        "DigitalBrainstem.javascript-ejs-support",
        "eamodio.gitlens",
        "ecmel.vscode-html-css",
        "esbenp.prettier-vscode",
        "hangxingliu.vscode-nginx-conf-hint",
        "junstyle.php-cs-fixer",
        "MariusAlchimavicius.json-to-ts",
        "mhutchie.git-graph",
        "pranaygp.vscode-css-peek",
        "raynigon.nginx-formatter",
        "redhat.vscode-yaml",
        "sibiraj-s.vscode-scss-formatter",
        "TabNine.tabnine-vscode",
        "Tchoupinax.tilt",
        "xdebug.php-debug",
        "yzhang.markdown-all-in-one",
        "GitHub.vscode-pull-request-github"
      ]
    }
  }

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
